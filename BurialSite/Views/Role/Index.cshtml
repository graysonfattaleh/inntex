@model RoleIndexViewModel
@{
    ViewData["Title"] = "Researcher Roles";
}

<h1>Researcher Roles</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
        <tr>

            <td>@role.Id</td>
            <td>@role.Name</td>
        </tr>
            
        
        }
    </tbody>
</table>

<h2>Users</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>UserName</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
        <tr>
            <td>@user.Id</td>
            <td>@user.NormalizedUserName</td>
            <form asp-action="ManageUserRoles" method="get">
                <input type="hidden" name="UserId" value="@user.Id" hidden />
                <button type="submit">Edit User Roles</button>
            </form>
        </tr>
        }
    </tbody>
</table>  