@model OneToOneField
@{
    ViewData["Title"] = "Edit Field";
}

<div class="container">
    <h1 style="text-align:center; font-size:64px;">Custom Field</h1>
    <div class="" style="background-color:white; color:white;">
        <div class="manegesites2">
            <div class="scroll">
                <div class="col col-8>" style="border-radius: 3px;">
                    <div style="border-radius: 3px;">
                        <form asp-action="EditField" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <label asp-validation-for="Name" class="text-danger"></label>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <label asp-validation-for="Description" class="text-danger"></label>
                            </div>
                            <div class="form-group">
                                <label asp-for="Type" class="control-label"></label>
                                <input asp-for="Type" class="form-control" />
                                <label asp-validation-for="Type" class="text-danger" style="text-align:center;" ></label>
                            </div>
                            <input asp-for="OneToOneFieldId" class="form-control" hidden />
                            <div class="form-group">
                                <input type="submit" value="Edit Field" class="btn btn-primary" style="text-align:center;" />
                            </div>
                        </form>
                    </div>
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>

            </div>
        </div>
    </div>
</div>
