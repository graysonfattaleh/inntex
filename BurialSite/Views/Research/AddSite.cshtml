@{
}

@model AddSiteViewModel

<div class="text-center">
    <h1 class="display-4">Burial Sites</h1>
    <div class="row ">
        <div class="col col-1>">
            <h2>Tools</h2>
            <a asp-controller="Research" asp-action="CreateBurial"> <button class="btn btn-secondary text-center"> Add New Site </button></a>
        </div>
        <div class="col col-lg-auto>">

            <table class="table table-light table-hover table-bordered">
                <thead>
                    <tr>
                        <td>
                            <p>Burial Number</p>
                        </td>
                        <td>
                            <p>Burial Location</p>
                        </td>
                        <td>
                            <p>Burial Depth</p>
                        </td>
                        <td>
                            Sex
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>

                    </tr>
                </thead>
                <tbody>

                    @foreach (Burial burial in Model.Burials)
                    {
                        <tr>
                            <td>
                                <p> @burial.Burial_Number</p>
                            </td>
                            <td>
                                <p>
                                    @burial.BurialLocation.Dig_Site_Name

                                    NS: @burial.BurialLocation.N_S_Grid_Site_Lower / @burial.BurialLocation.N_S_Grid_Site_Upper <br />
                                    EW: @burial.BurialLocation.E_W_Grid_Site_Lower / @burial.BurialLocation.E_W_Grid_Site_Upper

                                </p>

                            </td>
                            <td>
                                @burial.Depth
                            </td>
                            <td>
                                @burial.Sex
                            </td>
                            <td>
                            </td>
                            <td>
                                <form method="post" asp-controller="Research" asp-action="UploadPhotos">
                                    <input type="hidden" name="BurialId" id="BurialId" value="@burial.BurialID" />
                                    <button class="btn btn-warning text-center"> Upload Photos </button>
                                </form>
                            </td>
                            <td>
                                <form method="post" asp-controller="Research" asp-action="EditBurial">
                                    <input type="hidden" name="BurialId" id="BurialId" value="@burial.BurialID" />
                                    <button class="btn btn-primary text-center">Edit </button>
                                </form>
                            </td>

                            <td>
                                <form method="post" asp-controller="Research" asp-action="ViewBurialDetails">
                                    <input type="hidden" name="BurialId" id="BurialId" value="@burial.BurialID" />
                                    <button class="btn btn-secondary text-center">View Details</button>
                                </form>
                            </td>
                            <td>
                                <form method="post" asp-controller="Research" asp-action="DeleteBurialSite">
                                    <input type="hidden" name="BurialId" id="BurialId" value="@burial.BurialID" />
                                    <button type="submit" class="btn btn-danger text-center">Delete</button>
                                </form>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
        @if (Model.Burials.Count() == 0)
        {

        }

    </div>

</div>