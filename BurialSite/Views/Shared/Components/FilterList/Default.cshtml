@{
}
@model FilterOptions

<br />
<form method="get" asp-controller="Research" asp-action="FilterBurials">

    <div class="form-group" style="width:100%;">
        <label for="genderfilter" style="color:white;"> Gender </label><br />
        <select id="genderfilter" name="genderfilter" class="input5">

            @foreach (string gender in Model.genderoptions)
            {
                <option url-helper-genderfilter="@gender" value="@gender">
                    @gender
                </option>
            }

        </select>
    </div>
    <div class="form-group">
        <label for="depthfilter" style="color:white;"> Max Depth</label><br />
        <input value="@Context.Request.Query["depthfilter"]" type="number" id="depthfilter" name="depthfilter" class="input5" />
    </div>
    <div class="form-group" style="color:white">
        <label for="locationfilter" style="color:white;">Location</label><br />
        <select id="locationfilter" name="locationfilter" class="filtersite">
            @foreach (KeyValuePair<string, int> entry in Model.Locations)
            {
                <option url-helper-locationfilter="" value="@entry.Value">
                    @entry.Key
                </option>
            }
        </select>
    </div>

    <div class="form-group" style="color:white">
        <label for="customfilter" style="color:white;">Custom Filter</label><br />
        <select style="width:80%;"id="customfilter" name="customfilter" class="filtersite">

            @foreach (string entry in Model.CustomFilterOptions)
            {
                <option value="@entry">
                    @entry
                </option>
            }
        </select>
        <br />
        <input value="@Context.Request.Query["customfiltervalue"]" name="customfiltervalue" id="customfiltervalue" placeholder="Custom Filter Value" class="input5"/> 

    </div>
    <br />
    <br /> 
    <button type="submit" class="signinbuttonadd"> Filter </button>

    <br />

</form>
<br />