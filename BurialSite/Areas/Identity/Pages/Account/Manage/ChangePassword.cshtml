@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}


<partial name="_StatusMessage" for="StatusMessage" />
<div class="profile3">
    <h4 style="color:black; text-align:center">@ViewData["Title"]</h4>
    @*<div class="row">
        <div class="col-md-6">*@
            <form id="change-password-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.OldPassword"></label>
                    <input asp-for="Input.OldPassword" class="input" />
                    <label asp-validation-for="Input.OldPassword" class="text-danger"></label>
                </div>
                <div class="form-group">
                    <label asp-for="Input.NewPassword"></label><br />
                    <input asp-for="Input.NewPassword" class="input" />
                    <label asp-validation-for="Input.NewPassword" class="text-danger"></label>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="input" />
                    <label asp-validation-for="Input.ConfirmPassword" class="text-danger"></label>
                </div>
                <button type="submit" class="btn btn-primary">Update password</button>
            </form>
       @* </div>
    </div>*@


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>